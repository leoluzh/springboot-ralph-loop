# Arquivo de Configuração de Ambiente
# Copie para .env.local e configure com seus valores

# Google Gemini API Configuration
GEMINI_API_KEY=sua-api-key-aqui

# Application Configuration
APP_NAME=springboot-ralph-loop
APP_VERSION=0.0.1-SNAPSHOT
APP_ENVIRONMENT=development

# Database Configuration (para Docker Compose)
DB_NAME=springbootralphloop
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Server Configuration
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/

# Java Configuration
JAVA_MIN_MEM=512m
JAVA_MAX_MEM=2048m
JAVA_TOOL_OPTIONS="-Dfile.encoding=UTF-8 -Xms512m -Xmx2048m"
MAVEN_OPTS="-Xms512m -Xmx2048m -XX:MaxMetaspaceSize=256m"

# Logging
LOG_LEVEL=INFO

# Features
ENABLE_RALPH_LOOP=true
ENABLE_GEMINI_INTEGRATION=true
